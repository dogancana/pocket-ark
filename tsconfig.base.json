{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pocket-ark/fe-utils": ["libs/fe-utils/src/index.ts"],
      "@pocket-ark/lost-ark-data": ["libs/lost-ark-data/src/index.ts"],
      "@pocket-ark/ssr-utils": ["libs/ssr-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
